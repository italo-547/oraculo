{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "removeComments": false,
  "sourceMap": true,
  "inlineSources": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@constelacao/*": ["src/constelacao/*"],
      "@nucleo/*": ["src/nucleo/*"],
      "@analistas/*": ["src/analistas/*"],
      "@arquitetos/*": ["src/arquitetos/*"],
      "@zeladores/*": ["src/zeladores/*"],
      "@relatorios/*": ["src/relatorios/*"],
      "@*": ["src/*"],
      "@guardian/*": ["src/guardian/*"],
      "@tipos/*": ["src/tipos/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", ".oraculo", "**/*.test.ts", "**/*.spec.ts", "tests"]
}
