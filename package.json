{
  "name": "oraculo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Oráculo: Análise, limpeza e organização de repositórios",
  "author": "Italo C Lopes",
  "license": "MIT",
  "main": "./dist/cli.js",
  "bin": {
    "oraculo": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/cli.js"
  },
  "engines": {
    "node": ">=24.0.4"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "pre-public": "node scripts/pre-public.mjs",
    "start": "node ./dist/cli.js",
    "diagnosticar": "node ./dist/cli.js diagnosticar",
    "lint": "eslint \"{src,tests,temp-fantasma}/**/*.ts\"",
    "format": "prettier --check \"**/*.{ts,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,md}\"",
    "coverage:enforce": "vitest run --coverage --coverage.enabled=true --coverage.thresholds='{\\\"lines\\\":90,\\\"statements\\\":90,\\\"branches\\\":88,\\\"functions\\\":90}'",
    "check:style": "npm run lint && npm run typecheck && npm run format",
    "coverage:gate": "npm run coverage:enforce",
    "test:e2e": "vitest run --dir src/cli --reporter dot",
    "test:ci": "vitest run --reporter=json --outputFile .oraculo/last-test-report.json",
    "perf:baseline": "node dist/cli.js perf baseline --dir docs/perf",
    "perf:compare": "node dist/cli.js perf compare --dir docs/perf --json",
    "perf:gate": "node dist/cli.js perf compare --dir docs/perf --json | node -e \"let d='';process.stdin.on('data',c=>d+=c);process.stdin.on('end',()=>{const j=JSON.parse(d);if(j.regressao){console.error('Regressao performance > limite');process.exit(1)}console.log('Perf OK')});\"",
    "security:deps": "npm audit --production --audit-level=moderate || true",
    "security:lint": "npx eslint --no-error-on-unmatched-pattern \"src/**/*.ts\"",
    "prepare": "husky",
    "test": "vitest run",
    "test:ui": "vitest",
    "coverage": "vitest run --coverage",
    "cleanup:metricas": "node -e \"import('node:fs').then(fs=>fs.promises.rm('.oraculo/historico-metricas',{recursive:true,force:true}).then(()=>console.log('Histórico de métricas limpo.')).catch(e=>console.error('Falha limpeza:',e.message)))\"",
    "licenses:list": "npx license-checker-rseidelsohn --production --csv",
    "licenses:json": "npx license-checker-rseidelsohn --production --json > .oraculo/licenses.json",
    "licenses:notice": "node scripts/generate-notices.mjs",
    "licenses:notice:pt-br": "node scripts/generate-notices.mjs --pt-br",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "limpeza",
    "arquitetura",
    "análise",
    "estrutura",
    "organização"
  ],
  "dependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "chalk": "^5.5.0",
    "commander": "^12.1.0",
    "css-tree": "^2.3.1",
    "fast-xml-parser": "^4.5.3",
    "htmlparser2": "^9.1.0",
    "java-parser": "^2.3.4",
    "micromatch": "^4.0.8",
    "p-limit": "^4.0.0",
    "xxhashjs": "^0.2.2"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/jest": "^30.0.0",
    "@types/micromatch": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.10",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "license-checker-rseidelsohn": "^4.4.2",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "vitest": {
    "coverage": {
      "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "file1.ts",
        "file2.ts",
        "tmp-cache-file.ts",
        "scripts/**",
        "**/fixtures/**",
        "**/mocks/**",
        "**/__tests__/**",
        "temp-fantasma/**"
      ],
      "thresholds": {
        "lines": 90,
        "statements": 90,
        "branches": 90,
        "functions": 90
      }
    }
  },
  "lint-staged": {
    "*.{ts,js,cts,mts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
